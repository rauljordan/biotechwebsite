    <!-- Menu Bar End -->
        <!-- Inner Page Heading -->
        <div class="inner-page sign">
          <div class="container">
            <h2><i class="fa fa-sign-in red"></i><strong>Ingresar a su Cuenta</strong> Log In</h2>
            <div class="sign-content">
              <div class="row">
                
                <div class="col-md-3 col-sm-3">
                  <div class="well br-lblue white">
                    <h5>Miembro Individual</h5>
                    <p> Los miembros individuales tienen acceso a todos los artículos publicados por OHB y a eventos especiales. Pueden tener
                    el prestigio de ser parte de esta organización. </p>
                  </div>
                  <div class="well br-orange white">
                    <h5>Miembros Institucionales</h5>
                    <p> Los miembros institucionales pueden tener asesorías personales y poder promover y recibir publicidad de nuestra parte. OHB busca expandirse hacia nuevos retos y horizontes.</p>
                  </div>
                </div>
                <div class="col-md-5 col-sm-5">
                  <!-- Sign Up area -->
                  <div class="sign-up">

                    <h3><i class="fa fa-user green"></i> &nbsp;Ingresar como Usuario</h3>
                    <div class="container">
                      <!-- Sign up Form Start -->
                    <%= form_tag login_user_path do %>
                                    
                      <div class="form-group">
                        <%= label_tag "Email" %>
                        
                          <%= text_field_tag :email, params[:email], :class => "col-lg-9 form-control" %>
                        
                      </div>
                      <div class="form-group">
                        <%= label_tag "Contraseña" %>
                       
                          <%= password_field_tag :password, params[:password], :class => "col-lg-9 form-control" %>
                     
                      </div>
                      <br />
                      <div class="form-group">
                        <div class="col-lg-offset-3 col-lg-9">
                          <input name="commit" type="submit" value="Ingresar" class="btn btn-info" />
                          <button type="reset" class="btn btn-default">Reset</button>
                        </div>
                      <div>
                     <% end %>
                    
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>